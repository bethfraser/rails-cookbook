<%= link_to("Create New Category", new_category_path) %>
<br><br>
<% @categories.each do |category| %>
<h3><%= link_to("#{category.title}", category_path(category)) %></h3>
<%= link_to('Edit', edit_category_path(category), class: "show") %> 
<%= button_to("Delete Category", category_path(category), method: :delete, data: {confirm: 'Are you sure you want to delete this category?'}) %>
<br><br>
<% end %>

