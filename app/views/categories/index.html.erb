<%= link_to("New Category", new_category_path) %>
<br><br>
<% @categories.each do |category| %>
<h3><%= category.title %></h3>
<%= link_to('Show', category_path(category)) %><br>
<%= link_to('Edit', edit_category_path(category)) %><br>
<%= button_to("Delete Category", category_path(category), method: :delete, data: {confirm: 'Are you sure you want to delete this category?'}) %>
<br><br>
<% end %>

