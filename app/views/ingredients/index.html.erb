<h3><%= link_to("Add New Ingredient", new_ingredient_path) %></h3>
<br>
<% @ingredients.each do |ingredient| %>
<%= link_to("#{ingredient.name.capitalize}", ingredient_path(ingredient)) %>
<%= link_to('Edit', edit_ingredient_path(ingredient), class: "show") %> 
<%= button_to("Delete Ingredient", ingredient_path(ingredient), method: :delete, data: {confirm: 'Are you sure you want to delete this ingredient?'}) %>
<br><br>
<% end %>

