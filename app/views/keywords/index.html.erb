<%= link_to("Add New Keyword", new_keyword_path) %>
<ul>
<% @keywords.each do |keyword| %>
<li>
<h3><%= link_to("#{keyword.title}", keyword_path(keyword)) %></h3><br>
<%= link_to('Edit', edit_keyword_path(keyword),  class: "show") %>
<%= button_to("Delete", keyword_path(keyword), method: :delete, data: {confirm: 'Are you sure you want to delete this keyword?'}) %>
</li>
<% end %>
</ul>

